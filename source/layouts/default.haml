!!!
%html{:lang => "en-us"}
  %head
    %meta{:charset => "UTF-8"}
    %title= current_page.data.title || "Sign2Pay Documentation"
    = stylesheet_link_tag "main"
    :javascript
      s2p = {};

  %body{:class => page_classes}
    #docs_background
    .page-container
      %section.fixed-header.clearfix
        %h1.project-name
          %a{:href => "/"}
            %img{:src => "/images/logo/logo_sign2.svg", :width => "160"}
        .header-nav
          %a.link{:href => "https://merchant.sign2pay.com/profile/sign_up", :target => "_blank"} Sign Up
          %a.link{:href => "https://merchant.sign2pay.com/profile/sign_in", :target => "_blank"} Login
      %nav#main-nav
        %ul#categories
          %li.doc_section{"data-section" => "intro"}
            %a.overview{:href => "/"}
              %span Getting Started

          %li.doc_section{"data-section" => "payments"}
            %a{"data-parent" => "#categories", "data-toggle" => "collapse", :href => "#payment_pages"}
              %span Payments
            %ul#payment_pages.pages.collapse

              %li
                %a.m-commerce{:href => "/sections/payments/m-commerce/overview.html"}
                  %span M-Commerce
              %li
                %a.pre-approved{:href => "/sections/payments/pre-approved/overview.html"}
                  %span Pre-Approved
              %li
                %a.subscriptions{:href => "/sections/payments/subscriptions/overview.html"}
                  %span Subscriptions
              %li
                %a.on-demand{:href => "/sections/payments/on-demand/overview.html"}
                  %span On-Demand

          %li.doc_section{"data-section" => "integrations"}
            %a{"data-parent" => "#categories", "data-toggle" => "collapse", :href => "#quickstart_pages"}
              %span Integration Guide
            %ul#quickstart_pages.pages.collapse
              %li.todo
                %a.overview{:href => "/sections/integrations/overview.html"} Overview
              %li
                %a.registration{:href => "/sections/integrations/registration.html"} Registration
              %li
                %a.your-first-application{:href => "/sections/integrations/your-first-application.html"} Your First Application
              %li
                %a.client-credentials{:href => "/sections/integrations/client-credentials.html"} Client Credentials
              %li
                %a.the-button{:href => "/sections/integrations/button.html"} The Button
              %li
                %a.approaches{:href => "/sections/integrations/approaches.html"} Payment Integration
              %li
                %a.localization{:href => "/sections/integrations/localization.html"} Localization
              %li.todo
                %a.ux{:href => "/sections/integrations/ux.html"} User Experience
              %li
                %a.success{:href => "/sections/integrations/success.html"} Handling Success
              %li
                %a.errors{:href => "/sections/integrations/errors.html"} Handling Errors
              %li.todo
                %a.testing{:href => "/sections/integrations/testing.html"} Testing

          %li.doc_section.todo{"data-section" => "account"}
            %a{"data-parent" => "#categories", "data-toggle" => "collapse", :href => "#account_pages"}
              %span Your Account
            %ul#account_pages.pages.collapse
              %li
                %a.overview{:href => "/sections/account/overview.html"} Overview
              %li
                %a.getting-paid{:href => "/sections/account/getting-paid.html"} Getting Paid
              %li
                %a.invoicing{:href => "/sections/account/invoicing.html"} Invoicing
              %li
                %a.legal-requirements{:href => "/sections/account/legal-requirements.html"} Legal Requirements
          %li.doc_section.todo{"data-section" => "webhooks"}
            %a.overview{:href => "/sections/webhooks/overview.html"}
              %span Webhooks

          %li.doc_section{"data-section" => "api"}
            %a{"data-parent" => "#categories", "data-toggle" => "collapse", :href => "#api_pages"}
              %span API Reference
            %ul#api_pages.pages.collapse
              %li
                %a.overview{:href => "/sections/api/overview.html"} Overview
              %li
                %a.authorization{:href => "/sections/api/authorization.html"} Authorization
              %li
                %a.account{:href => "/sections/api/account.html"} /accounts
              %li
                %a.applications{:href => "/sections/api/applications.html"} /applications
              %li
                %a.banks{:href => "/sections/api/banks.html"} /banks
              %li
                %a.countries{:href => "/sections/api/countries.html"} /countries
              %li
                %a.oauth{:href => "/sections/api/oauth/overview.html"} /oauth
              %li
                %a.payments{:href => "/sections/api/payments/overview.html"} /payments
              %li
                %a.reports{:href => "/sections/api/reports/payouts.html"} /reports
              %li
                %a.sms{:href => "/sections/api/sms.html"} /sms

          %li.doc_section.todo{"data-section" => "oauth"}
            %a.overview{:href => "/sections/oauth/overview.html"}
              %span OAuth 2.0

          %li.doc_section{"data-section" => "glossary"}
            %a.overview{:href => "/sections/glossary.html"}
              %span Glossary

          %li.doc_section.todo{"data-section" => "support"}
            %a.overview{:href => "/sections/support/overview.html"}
              %span Support

          %li.doc_section{"data-section" => "faq"}
            %a.overview{:href => "/sections/faq/overview.html"}
              %span FAQ
            %ul#faq_pages.pages.collapse
              %li
                %a.overview{:href => "/sections/faq/overview.html"} Overview
              %li.todo
                %a.merchant{:href => "/sections/faq/merchant.html"} Merchant
              %li
                %a.developer{:href => "/sections/faq/developer.html"} Developer

      %section.main-content.container

        = yield

        .row
          .col-sm-12
            .support-content
              %hr/
              %h4 Stuck on Something?
              %p
                Be sure to check our
                = succeed "," do
                  %a{:href => "/sections/faq/overview.html"} FAQs
                = succeed "," do
                  %a{:href => "/sections/faq/overview.html"} Support
                or
                %a{:href => "mailto:support@sign2pay.com?subject=Give+me+a+Hand?"} Contact Us
                directly.

    %script{:src => "/javascripts/lib/jquery-2.1.4.min.js", :type => "text/javascript"}
    %script{:src => "/javascripts/lib/bootstrap.min.js", :type => "text/javascript"}
    %script{:src => "/javascripts/lib/button.js", :type => "text/javascript"}
    %script{:src => "/javascripts/lib/intlTelInput.js", :type => "text/javascript"}
    %script{:src => "/javascripts/lib/libphonenumber.js", :type => "text/javascript"}

